{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/.github/**",
            "**/node_modules/**",
            "**/.src/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    }
}