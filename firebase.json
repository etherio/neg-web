{
  "database": {
    "rules": "./database.rules.json"
  },
  "storage": {
    "rules": "./firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/.github/**",
      "**/node_modules/**",
      "**/src/**"
    ],
    "redirects": [
      {
        "source": "/fb",
        "destination": "https://fb.me/nweoo22222",
        "type": 301
      },
      {
        "source": "/me",
        "destination": "https://m.me/nweoo22222",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
